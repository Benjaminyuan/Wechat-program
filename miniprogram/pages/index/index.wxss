#contents{
  background-color:#eeeeee;
  border-top-left-radius: 30px;
  border-top-right-radius: 30px;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 70%;
  margin-top: -30px;

}
.content-item{
  display: flex;
  border-radius: 20px;
  background-color: #aaaaaa;
  margin-top:10px; 
  width: 90%;
  height: 160px;
  overflow: hidden;
  flex-direction: column;
  box-shadow: 2px 2px 3px #aaaaaa;
}
#page_down{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 40px;
  background-color: #dddddd;
}
.video-item{
  height: 80%;
  width: 100%;
  border-top-right-radius: 20px;
  border-top-left-radius: 20px;
}
.block{
  display: block;
}
.article_header{
  width: 80%;
  margin: auto;
}
